#!/usr/bin/perl

my $page = $ARGV[0] || "agendas";

my @lines = `wget -O - GET 'http://www.cityofomaha.org/cityclerk/city-council/$page'`;

mkdir("data");

for(@lines) {
    if (/.pdf/ && /agenda/ && m/href="([^"]+)"/) {
        print $1."\n";
        `wget -P data http://www.cityofomaha.org$1 `;
    }
}
